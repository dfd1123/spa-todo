{
    "compilerOptions": {
        "outDir": "./dist/",
        "paths": {
            "@/*": ["./src/*"],
            "@styles/*": ["./src/styles/*"],
            "@components/*": ["./src/views/components/*"],
            "@pages/*": ["./src/views/pages/*"],
          },
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es6",
        "allowJs": true
    }
}